<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <meta charset="UTF-8" />
    <title>
        {% block title %}
            {{ fallbacks.get('site_title') }}
        {% endblock %}
    </title>

    {% block meta %}
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
        <meta name="author" content="SumoCoders">
    {% endblock %}

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    {% block stylesheets %}
        {# Load full css if browser is > IE9 or not IE9 #}
        <!--[if gt IE 9]>
        {% stylesheets filter="compass" "@SumoCodersFrameworkCoreBundle/Resources/assets/sass/style.scss" %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        <![endif]-->
        <!--[if !IE]> -->
        {% stylesheets filter="compass" "@SumoCodersFrameworkCoreBundle/Resources/assets/sass/style.scss" %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        <!-- <![endif]-->

        {# Load css and bootstrap seperately if <= IE9 #}
        <!--[if lte IE 9]>
        {% stylesheets filter="compass" "@SumoCodersFrameworkCoreBundle/Resources/assets/sass/bootstrap.scss" %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% stylesheets filter="compass" "@SumoCodersFrameworkCoreBundle/Resources/assets/sass/style_ie.scss" %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        <![endif]-->
    {% endblock %}

    {% block head_javascripts %}
        <script>
            var jsData = {{ jsData.parse()|raw }};
        </script>

        <script type="text/javascript" src="/vendor/jquery/dist/jquery.min.js"></script>
        <script type="text/javascript" src="/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="/vendor/modernizr/modernizr.js"></script>

        {% javascripts output="/js/libs.js"
            "@SumoCodersFrameworkCoreBundle/Resources/assets/js/libs/*"
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% javascripts output="/js/sumo.js" "@SumoCodersFrameworkCoreBundle/Resources/assets/js/sumo_plugins.js" %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% javascripts output="/js/app.js"
            "@SumoCodersFrameworkCoreBundle/Resources/assets/coffee/framework.data.coffee"
            "@SumoCodersFrameworkCoreBundle/Resources/assets/coffee/framework.locale.coffee"
            "@SumoCodersFrameworkCoreBundle/Resources/assets/coffee/framework.form.coffee"
            "@SumoCodersFrameworkCoreBundle/Resources/assets/coffee/framework.coffee"
            "@SumoCodersFrameworkCoreBundle/Resources/assets/coffee/framework.form.search.coffee"
            "@SumoCodersFrameworkCoreBundle/Resources/assets/coffee/app.coffee"
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}

    {% block icons %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">
        <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}">
        <link rel="image_src" href="{{ asset('image_src.png') }}" />
    {% endblock %}
</head>


{# @todo populate the class with the module and action#}
<body class="">
<!--[if lt IE 8 ]>
    <div id="ie6" class="alert alert-block" role="alert">
        <a href="#" class="close" data-dismiss="alert" title="{{ 'dialogs.close'|trans|capitalize }}">x</a>
        {{ 'core.warnings.oldBrowser'|trans }}
    </div>
<![endif]-->
    {{ include('SumoCodersFrameworkCoreBundle::navigation.html.twig') }}

    <div id="contentWrap">
        <div id="content">
            <header id="header" role="banner">
                <div class="container bar">
                    <div class="title">
                        <a id="toggleMenu" class="visible-xs iconLink" href="#">{{ 'navigation.titles.showHideMenu'|trans|capitalize }}</a>
                        {% block header_title %}
                        {% endblock %}
                    </div>
                    <div class="actions">
                        <a href="#" class="dropdownToggle visible-xs">{{ 'navigation.titles.possible_actions'|trans|capitalize }}:</a>
                        {% block header_navigation %}
                        {% endblock %}
                    </div>
                </div>
            </header>

            {{ include('SumoCodersFrameworkCoreBundle::notifications.html.twig') }}

            <section id="main" role="main">
                <div class="container">
                    {% block main %}
                    {% endblock %}
                </div>
            </section>
        </div>

        {% block footer %}
            <div class="container">
                <div class="row hidden-md hidden-lg">
                    <a href="#" class="pull-right backToTop"><i class="fa fa-arrow-circle-up"></i> {{ 'core.interface.backToTop'|trans|capitalize }}</a>
                </div>
            </div>
        {% endblock %}

    {{ include('SumoCodersFrameworkCoreBundle::dialogs.html.twig') }}

    {% block javascripts %}{% endblock %}
</body>
</html>
