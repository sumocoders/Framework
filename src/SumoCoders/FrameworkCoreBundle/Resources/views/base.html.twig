<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    {{ errbit_notifier() }}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <meta charset="UTF-8" />
    <title>
        {% block title %}
            {{ fallbacks.get('site_title') }}
        {% endblock %}
    </title>

    {% block meta %}
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
        <meta name="author" content="SumoCoders">
    {% endblock %}

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    {% block stylesheets %}
            {% stylesheets
                'assets/vendor/select2/select2.css'
                'assets/css/style.css'
                filter='cssrewrite'
                output='css/style.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
    {% endblock %}

    {% block head_javascripts %}
        <script>
            var jsData = {{ jsData|raw }};
        </script>

        {% javascripts
            'assets/vendor/jquery/dist/jquery.min.js'
            'assets/vendor/jquery-ui/jquery-ui.min.js'
            'assets/vendor/bootstrap/dist/js/bootstrap.min.js'
            'assets/vendor/modernizr/modernizr.js'
            'assets/vendor/respond/dest/respond.min.js'
            'assets/vendor/jquery-ui/jquery-ui.min.js'
            'assets/vendor/select2/select2.min.js'
            'assets/icons/grunticon.loader.js'
            'assets/js/frameworkcorebundle.grunticon.js'
            output='js/vendors.js'
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% javascripts
            'assets/js/sumo_plugins.js'
            output='js/sumo_plugins.js'
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% javascripts
            'assets/js/frameworkcorebundle.framework.data.js'
            'assets/js/frameworkcorebundle.framework.locale.js'
            'assets/js/frameworkcorebundle.framework.form.js'
            'assets/js/frameworkcorebundle.framework.js'
            'assets/js/frameworkcorebundle.framework.form.search.js'
            'assets/js/frameworkcorebundle.app.js'
            output='js/app.js'
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}

    {% block icons %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">
        <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}">
        <link rel="image_src" href="{{ asset('image_src.png') }}" />
    {% endblock %}
</head>


{# @todo populate the class with the module and action#}
<body class="">
<!--[if lt IE 8 ]>
    <div id="ie6" class="alert alert-block" role="alert">
        <a href="#" class="close icon-close" data-dismiss="alert" title="{{ 'dialogs.close'|trans|capitalize }}"><span class="sr-only" aria-hidden="true">x</span></a>
        {{ 'core.warnings.oldBrowser'|trans }}
    </div>
<![endif]-->

    <div id="main-wrapper">
        <div id="main-menu" role="navigation">
            {{ include('SumoCodersFrameworkCoreBundle::navigation.html.twig') }}
        </div>
        <div id="content-wrapper">
          <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">Library</a></li>
            <li class="active">Data</li>
          </ol>
            {{ include('SumoCodersFrameworkCoreBundle::notifications.html.twig') }}
          <div class="header-title">
            {% block header_title %}
            {% endblock %}
          </div>
          <div class="actions">
            {% block header_navigation %}
              <button class="btn btn-info">Downloaden</button>
              <button class="btn btn-info">Overzicht</button>
            {% endblock %}
          </div>
          <section id="main" role="main">
            <div class="container-fluid">
                {% block main %}
                {% endblock %}
            </div>
          </section>
        </div>
        <footer class="footer">
          {% block footer %}
            <div class="container-fluid">
              <div class="row hidden-md hidden-lg">
                <a href="#" class="pull-right backToTop"><i class="fa fa-arrow-circle-up"></i> {{ 'core.interface.backToTop'|trans|capitalize }}</a>
              </div>
            </div>
          {% endblock %}
        </footer>
    </div>

    {{ include('SumoCodersFrameworkCoreBundle::dialogs.html.twig') }}

    {% block javascripts %}{% endblock %}

    {% if app.environment == 'dev' %}
        <script src="//localhost:35729/livereload.js"></script>
    {% endif %}
</body>
</html>
