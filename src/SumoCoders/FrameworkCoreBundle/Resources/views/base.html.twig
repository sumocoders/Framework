<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    {{ errbit_notifier() }}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <meta charset="UTF-8" />
    <title>
        {% block title %}
            {{ fallbacks.get('site_title') }}
        {% endblock %}
    </title>

    {% block meta %}
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
        <meta name="author" content="SumoCoders">
    {% endblock %}

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    {% block stylesheets %}
        {# Load full css if browser is > IE9 or not IE9 #}
        <!--[if gt IE 9]>
        {% stylesheets
            'assets/css/style.css'
            filter='cssrewrite'
            output='css/style.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        <![endif]-->
        <!--[if !IE]> -->
            {% stylesheets
                'assets/css/style.css'
                filter='cssrewrite'
                output='css/style.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        <!-- <![endif]-->

        {# Load css and bootstrap seperately if <= IE9 #}
        <!--[if lte IE 9]>
            {% stylesheets
                'assets/vendor/bootstrap/dist/css/bootstrap.css'
                filter='cssrewrite'
                output='css/bootstrap.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
            {% stylesheets
                'assets/css/style_ie.css'
                filter='cssrewrite'
                output='css/style_ie.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        <![endif]-->
    {% endblock %}

    {% block head_javascripts %}
        <script>
            var jsData = {{ jsData.parse()|raw }};
        </script>

        {% javascripts
            'assets/vendor/jquery/dist/jquery.min.js'
            'assets/vendor/bootstrap/dist/js/bootstrap.min.js'
            'assets/vendor/modernizr/modernizr.js'
            'assets/vendor/respond/dest/respond.min.js'
            output='js/vendors.js'
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% javascripts
            'assets/js/sumo_plugins.js'
            output='js/sumo_plugins.js'
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% javascripts
            'assets/js/frameworkcorebundle.framework.data.js'
            'assets/js/frameworkcorebundle.framework.locale.js'
            'assets/js/frameworkcorebundle.framework.form.js'
            'assets/js/frameworkcorebundle.framework.js'
            'assets/js/frameworkcorebundle.framework.form.search.js'
            'assets/js/frameworkcorebundle.app.js'
            output='js/app.js'
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}

    {% block icons %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">
        <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}">
        <link rel="image_src" href="{{ asset('image_src.png') }}" />
    {% endblock %}
</head>


{# @todo populate the class with the module and action#}
<body class="">
<!--[if lt IE 8 ]>
    <div id="ie6" class="alert alert-block" role="alert">
        <a href="#" class="close" data-dismiss="alert" title="{{ 'dialogs.close'|trans|capitalize }}">x</a>
        {{ 'core.warnings.oldBrowser'|trans }}
    </div>
<![endif]-->
    {{ include('SumoCodersFrameworkCoreBundle::navigation.html.twig') }}

    <div id="contentWrap">
        <div id="content">
            <header id="header" role="banner">
                <div class="container bar">
                    <div class="title">
                        <a id="toggleMenu" class="visible-xs iconLink" href="#">{{ 'navigation.titles.showHideMenu'|trans|capitalize }}</a>
                        {% block header_title %}
                        {% endblock %}
                    </div>
                    <div class="actions">
                        <a href="#" class="dropdownToggle visible-xs">{{ 'navigation.titles.possible_actions'|trans|capitalize }}:</a>
                        {% block header_navigation %}
                        {% endblock %}
                    </div>
                </div>
            </header>

            {{ include('SumoCodersFrameworkCoreBundle::notifications.html.twig') }}

            <section id="main" role="main">
                <div class="container">
                    {% block main %}
                    {% endblock %}
                </div>
            </section>
        </div>

        {% block footer %}
            <div class="container">
                <div class="row hidden-md hidden-lg">
                    <a href="#" class="pull-right backToTop"><i class="fa fa-arrow-circle-up"></i> {{ 'core.interface.backToTop'|trans|capitalize }}</a>
                </div>
            </div>
        {% endblock %}

    {{ include('SumoCodersFrameworkCoreBundle::dialogs.html.twig') }}

    {% block javascripts %}{% endblock %}

    {% if app.environment == 'dev' %}
        <script src="//localhost:35729/livereload.js"></script>
    {% endif %}
</body>
</html>
