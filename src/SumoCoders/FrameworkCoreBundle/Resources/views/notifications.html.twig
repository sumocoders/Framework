{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success" role="status">
        <div class="container">
            <a class="close" data-dismiss="alert" title="{{ 'dialogs.close'|trans|capitalize }}">{{ 'dialogs.close'|trans|capitalize }}</a>
            {{ flashMessage }}
        </div>
    </div>
{% endfor %}

